<Page
    x:Class="UWP_Mastermind.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Mastermind"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="rootGrid" Width="600" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="boardGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Background="Beige"></Border>
            <Border Grid.Column="1" Background="Orange"></Border>
            <Border Grid.Column="0" Grid.Row="1" Background="Salmon"></Border>
            <Border Grid.Column="1" Grid.Row="1" Background="AliceBlue"></Border>
            
        </Grid>
    </Grid>
</Page>
